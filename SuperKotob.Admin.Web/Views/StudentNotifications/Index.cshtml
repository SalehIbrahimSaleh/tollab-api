@model SuperKotob.Admin.Core.DataResponse<StudentNotification>
@using SuperKotob.Admin.Web.Models
@using Tollab.Admin.Data.Models
@using SuperKotob.Admin.Data.Models


@{
    ViewBag.Title = "StudentNotifications";
}
<style>
    #Details {
        display: none !important;
    }
</style>
<h2 style="text-align:center;color:white;border-radius:25px;background:#3c8dbc">Student Notification</h2>

@{
    Html.RenderPartial("_grid", new GridModel()
    {
        PluralName = "StudentNotifications",
        SingleName = "StudentNotification",
        Errors = Model.Errors,
        Items = Model.Data.Select(x => x as DataModel).ToList(),
        PagingMeta = Model.Paging,
        Fields = new List<GridField>()
        {
        new GridField("Id")
        {
          Filter = new GridFieldFilter()
        {
        PreSelectedIds = Model.RequestInputs["Id"]
        }
        },
        new GridField("Title", "Id", "English Title")
        {
          Filter = new GridFieldFilter()
            {
            Type = GridFieldFilterType.WithoutSearch,
            AjaxSource = "/StudentNotifications/autocomplete",
            PreSelectedIds = Model.RequestInputs["Id"]
            }
        }
        ,
           new GridField("TitleLT", "Id", "Arabic Title")
        {
          Filter = new GridFieldFilter()
            {
            Type = GridFieldFilterType.WithoutSearch,
            AjaxSource = "/StudentNotifications/autocomplete",
            PreSelectedIds = Model.RequestInputs["Id"]
            }
        }
        ,
        new GridField("NotificationToId", "Id", "Notification To Id")
       {
            Filter = new GridFieldFilter()
            {
            Type = GridFieldFilterType.Ajax,
            AjaxSource = "/StudentNotifications/AutoComplete",
            PreSelectedIds = Model.RequestInputs["Id"]

            }
        },
         new GridField("Reference.Name", "ReferenceId", "Reference")
        {
          Filter = new GridFieldFilter()
            {
            Type = GridFieldFilterType.Ajax,
            AjaxSource = "/References/autocomplete",
            PreSelectedIds = Model.RequestInputs["ReferenceId"]
            }
        },
  new GridField("CreationDate", "Id", "Creation Date")
        {
          Filter = new GridFieldFilter()
            {
            Type = GridFieldFilterType.WithoutSearch,
            AjaxSource = "/StudentNotificationss/autocomplete",
            PreSelectedIds = Model.RequestInputs["Id"]
            }
        }
        ,
  new GridField("Student.Name", "StudentId", "Student")
        {
          Filter = new GridFieldFilter()
            {
            Type = GridFieldFilterType.Ajax,
            AjaxSource = "/Students/autocomplete",
            PreSelectedIds = Model.RequestInputs["StudentId"]
            }
        }
        ,
        }
    });
}
<style>
    #edt {
        display: none;
    }

    #det {
        display: none;
    }

    #txt {
        display: none;
    }
</style>
